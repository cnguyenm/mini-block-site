{
    "name":           "mini block site",
    "version":        "0.1",
    "description":    "Blocksite extension with minimum function",
    "background": {
      "persistent": true,
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_icon": "img/light-icon-48x48.png",
      "default_popup": "popup.html"
    },
    "icons" : {
        "48" : "img/light-icon-48x48.png"
    },
    "permissions":    [
      "*://*/*",
      "webRequest", "webRequestBlocking", "tabs", "storage", "activeTab"
    ],
    "manifest_version": 2
  }

  